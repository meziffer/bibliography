					<key>COMMAND_STRING</key>
					<string>#!/bin/bash
set -euo pipefail

# Always run from the folder this app is saved into? (Noâ€”better: ask user to pick repo)
REPO_DIR="$(osascript -e 'POSIX path of (choose folder with prompt "Select your bibliography Git repo folder")')"
cd "$REPO_DIR"

BIB_FILE="scibib.bib"

if [[ ! -f "$BIB_FILE" ]]; then
  osascript -e 'display dialog "references.bib not found in the selected folder.\n\nMake sure Better BibTeX auto-export writes to this repo." buttons {"OK"} with icon stop'
  exit 1
fi

if ! git rev-parse --is-inside-work-tree &gt;/dev/null 2&gt;&amp;1; then
  osascript -e 'display dialog "This folder is not a Git repository." buttons {"OK"} with icon stop'
  exit 1
fi

git add "$BIB_FILE"

if git diff --cached --quiet; then
  osascript -e 'display dialog "No bibliography changes to commit." buttons {"OK"}'
  exit 0
fi

# Optional: prompt for a commit message
MSG="$(osascript -e 'text returned of (display dialog "Commit message:" default answer "Update bibliography" buttons {"OK"} default button 1)')"

git commit -m "$MSG"
git push

osascript -e 'display dialog "Bibliography updated and pushed." buttons {"OK"} with icon note'
</string>
